<h1 class="text-center text-primary">Appointment List</h1>

<% if(message) { %>
<div class="alert alert-success" role="alert">
  <%= message %>
</div>
<%
        }%>
<div class="container-fluid">
<table table class="table table-dark table-bordered" style="margin-top: 20px; ">
  <thead>
    <tr>


      <th scope>Service Name</th>
      <th scope>Name</th>
      <th scope>Ph No</th>
      <th scope>Address</th>
      <th scope>Accepted</th>
      <th scope>Date</th>
      <th scope>Time</th>
      <th scope>Description</th>
      <th scope>Appointed Date</th>
      <th scope>Confirmation</th>
      <th scope>Deletion</th>


      <!-- <th scope="col" colspan=""></th> -->
    </tr>
  </thead>
  <tbody>
    <% appointments.forEach(function(appointment) { %>
    <tr>


      <td><%=appointment.service_name%></td>
      <td><%=appointment.name%></td>
      <td><%=appointment.phNo%></td>
      <td><%=appointment.address %></td>
      <td><%=appointment.accepted ? "yes" : "no"%></td>
      <td><%=appointment.date %></td>
      <td><%=appointment.time %></td>
      <td><%=appointment.description %></td>
      <td><%=appointment.createdBy.toLocaleDateString()%></td>
     
        <td>
     

       
           
            <% if(!appointment.accepted) { %>
           
                <form style="display: inline" action="/admin/appointments/" method="POST">
                  <input name="id" hidden value=<%=appointment._id %> />
                  <input name="status" value="accept" hidden />
                
        
        
                  <button type="submit" class="btn btn-outline-primary" style="width: 70px">Accept</button>
                </form>

    
              
            </td>
                <%
                        }%>

          
        </td>
          

        <td>
          <form style="display: inline" action="/admin/appointments/" method="POST">
            <input name="id" hidden value=<%=appointment._id %> />
            <input name="status" value="delete" hidden />
          
  
  
            <button type="submit" class="btn btn-outline-danger" style="width: 70px">Delete</button>
          </form>
        </td>
     
   
    </tr>
    <% }) %>
  </tbody>
</table>
</div>

<%- include('../partials/footer') %>