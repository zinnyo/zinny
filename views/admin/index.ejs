  <%= message %>
</div>
<%
        }%>

<div class="container-fluid">
  <table class="table table-dark table-bordered" style="margin-top: 20px; ">
    <thead>
      <tr>

        <th scope="col">Image</th>
        <th scope="col">Product Code</th>
        <th scope="col">Product Name</th>
        <th scope="col">In Stock</th>
        <th scope="col">Price</th>
        <th scope="col">Product Type</th>
        <th scope="col">Description</th>
        <th scope="col">Manage</th>
        <!-- <th scope="col" colspan=""></th> -->
      </tr>
    </thead>
    <tbody>
      <% products.forEach(function(product) { %>
      <tr>

        <td>
          <img width="100" height="100" class="img-thumbnail" src="<%=product.photo%>" />
        </td>

        <td><%=product.code %></td>
        <td><%=product.name%></td>
        <td><%=product.available ? "yes" : "no"%></td>
        <td>$<%=product.price%></td>
        <td><%=product.type%></td>
        <td><%=product.description%></td>
        <td>
          <form style="display: inline">
            <a class=" btn btn-outline-info" style="width: 70px" href="/admin/edit/<%=product.code%>"
              role="button">Edit</a>
          </form>
          <form style="display: inline" action="/admin/dltProducts" method="POST">
            <input name="pid" hidden value=<%=product.code %> />

            <button type="submit" class="btn btn-outline-danger" style="width: 70px">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

