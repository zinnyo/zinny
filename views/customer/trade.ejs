<nav class="navbar navbar-light bg-light">
  <% if(success.length) { %>
    <a class="navbar-brand" href="../<%=id%>">Zinny Gaming PC & Components Sale, Trade-in and Service</a>
    <%
            }%>

<% if(!success.length) { %>
  <a class="navbar-brand" href="../<%=id%>">Zinny Gaming PC & Components Sale, Trade-in and Service</a>
  <%
          }%>
</nav>
<br />

<div class="container">
  <h2>Trade-In Form</h2>
  <form action="/customer/<%=id%>/trade" method="POST" enctype="multipart/form-data">
    <% if(error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <%
        }%>

        <% if(success) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <%
        }%>
    <div class="form-group">
      <label for="name">Your Name</label>
      <input
        class="form-control"
        id="name"
        name="name"
        placeholder="Your Name" required
      />
    </div>
    <div class="form-group">
      <label for="email">Your Email</label>
      <input
        class="form-control"
        id="email"
        type="email"
        placeholder="Your Email"
        name="email" required
      />
    </div>
    <div class="form-group">
      <label for="phno">Your Phone Number</label>
      <input
        class="form-control"
        id="phno"
        placeholder="Your Phone Number"
        name="phNo" required
        type="number"
      />
    </div>
    <div class="form-group">
      <label for="address">Your Address</label>
      <input
        class="form-control"
        id="address"
        placeholder="Address"
        name="address" required
      />
    </div>
    <div class="form-group">
      <label for="item_name">Your Product Name</label>
      <input
        class="form-control"
        id="item_name"
        placeholder="Your Product Name"
        name="item_name" required
      />
    </div>
    

    <div class="form-group">
      <label for="price">Product Price</label>
      <input
        class="form-control"
        id="price"
        placeholder="Product Price"
        name="price" required
      />
    </div>

    <div class="form-group">
      <label for="type">Product Type</label>
      <input
        class="form-control"
        id="type"
        placeholder="Product Type"
        name="type" required
      />
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea
        class="form-control"
        id="description"
        rows="3"
        name="description"
      ></textarea>
    </div>

    <div class="form-group">
      <label for="description">Image</label>
      <input type="file" name="file" />
    </div>

    <button type="submit" class="btn btn-outline-primary">Submit</button>
  </form>
</div>

<%- include('../partials/footer') %>
