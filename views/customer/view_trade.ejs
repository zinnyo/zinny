<%- include('../partials/header') %>

<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="../<%=id%>">Zinny Gaming PC & Components Sale, Trade-in and Service</a>
  
  </nav>
  <br />

  <a type="button" href="/customer/<%= id %>/my-trade" style="margin: 20px" class="btn btn-outline-primary btn-lg">
    My Trade-In Request
   </a> 

<h1 class="text-center text-primary">Tradable List</h1>

<div class="container-fluid">

<table class="table table-dark table-bordered" style="margin-top: 20px; ">
  <thead>
    <tr>

      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Ph No</th>
      <th scope="col">Address</th>
      <th scope="col">Product Name</th>
      <th scope="col">Price</th>
      <th scope="col">Product Type</th>
      <th scope="col">Description</th>
  
      <!-- <th scope="col" colspan=""></th> -->
    </tr>
  </thead>
  <tbody>
    <% trades.forEach(function(trade) { %>
    <tr>

      <td>
        <img width="100" height="100" class="img-thumbnail" src="<%=trade.photo%>" />
      </td>

    
      <td><%=trade.name%></td>
      <td><%=trade.email %></td>
      <td><%=trade.phNo%></td>
      <td><%=trade.address%></td>
      <td><%=trade.item_name%></td>
      <td>$<%=trade.price%></td>
      <td><%=trade.type%></td>
      <td><%=trade.description%></td>

     
     
     
   
    </tr>
    <% }) %>
  </tbody>
</table>
</div>
<%- include('../partials/footer') %>