<h1 class="text-center text-primary">My Trade-In Request</h1>


<div class="container-fluid">
<table class="table table-dark table-bordered" style="margin-top: 20px; ">
  <thead>
    <tr>

      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Ph No</th>
      <th scope="col">Address</th>
      <th scope="col">Product Name</th>
      <th scope="col">Price</th>
      <th scope="col">Product Type</th>
      <th scope="col">Description</th>
      <th scope="col">Admin Accepted</th>
     
      <th scope="col"></th>
  
      <!-- <th scope="col" colspan=""></th> -->
    </tr>
  </thead>
  <tbody>
    <% trades.forEach(function(trade) { %>
    <tr>

      <td>
        <img width="100" height="100" class="img-thumbnail" src="<%=trade.photo%>" />
      </td>

    
      <td><%=trade.name%></td>
      <td><%=trade.email %></td>
      <td><%=trade.phNo%></td>
      <td><%=trade.address%></td>
      <td><%=trade.item_name%></td>
      <td>$<%=trade.price%></td>
      <td><%=trade.type%></td>
      <td><%=trade.description%></td>
      <td><%=trade.accepted ? "yes" : "no"%></td>
    
     <td>
        <!-- <form style="display: inline" action="/customer/<%=id%>/my-trade/<%=trade._id %>" method="GET">
        

          
  
  
            <button type="submit" class="btn btn-outline-primary" style="width: 70px">Edit</button>
           
          </form> -->
          <a href="/customer/<%=id%>/my-trade/<%= trade._id%>" class="btn btn-primary">Edit</a>
        <form style="display: inline" action="/customer/<%=id%>/my-trade/" method="POST">
            <input name="id" hidden value=<%=trade._id %> />
            <!-- <input name="status" value="accept" hidden /> -->
          
  
  
        <% if(trade.accepted)  {
          %>

          <button type="submit" class="btn btn-outline-warning" style="width: 70px">Sold</button>

          <% } %>
           
          </form>
     </td>
     
     
   
    </tr>
    <% }) %>
  </tbody>
</table>
</div>

